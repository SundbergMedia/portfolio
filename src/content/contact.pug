extends box

block variables
  - mainClass = 'contact'
  - name = 'contact'

block content
  h2 Get in touch
  p.lead= contact

  form(action=contactHost method='post')
    input(name='email' placeholder='Your email' required)
    input(name='name' placeholder='Your name' required)
    input(name='subject' placeholder='What can I help you with?' required)
    textarea(name='message' placeholder='Message' required)
    button#send Send
