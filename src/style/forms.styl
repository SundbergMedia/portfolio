/*!
 * Forms
 */
input, textarea, select
  padding: .4em
  border: 1px solid #ddd
  font-size: 112%
  // font-family: 'Noto Sans', Helvetica, Arial, sans-serif
  // font-family: Arial, Helvetica, sans-serif
  // box-shadow: inset 12px 7px 50px 0 rgba(50, 50, 50, 0.2) 

textarea
  width: 100%
  min-height: 220px

// TODO: class?
form
  display: grid
  grid-template-columns: repeat(3, 1fr)
  grid-gap: 1.5em
  margin-top: 2em

  // input
  //   flex: 1

  button
    grid-column: 3
    justify-self: flex-end
    
  textarea
    grid-column: 1 / -1

input, textarea
  transition: all 0.3s

  &:focus
    box-shadow: 0 0 8px 2px rgba(0, 0, 0, 0.2)
    outline: 0

button, .button
  padding: 0.4em 0.7em
  font-size: 112%
  font-weight: 400
  border-radius: 6px
  background: linear-gradient(#bdc3c7, #9a9a9a)
  border: 1px solid #dedede 
