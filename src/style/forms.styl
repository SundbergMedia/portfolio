/*!
 * Forms
 */
input, textarea, select
  padding: .4em
  border: 1px solid #ddd
  margin: .4em 0
  font-size: 122%
  font-family: Arial, Helvetica, sans-serif
  // box-shadow: inset 12px 7px 50px 0 rgba(50, 50, 50, 0.2) 

textarea
  width: 100%
  min-height: 140px

form
  display: flex
  flex-wrap: wrap

  input
    flex: 1

  button
    padding: 1em
    border: 1px solid #d3d3d3


input, textarea
  transition: all 0.3s

  &:focus
    box-shadow: 0 0 8px 2px rgba(0, 0, 0, 0.2)
    outline: 0
