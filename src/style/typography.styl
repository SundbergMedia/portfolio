@require config

@import url('https://fonts.googleapis.com/css?family=Noto+Sans:400,700')

body
  font: 150%/150% 'Noto Sans', Helvetica, Arial, sans-serif

h1, h2, h3, h4, h5
  color: ACCENT

.lead
  font-size: 142%
  text-shadow: 0px -1px rgba(0, 0, 0, 0.25)
  margin-bottom: 0.5em
  line-height: 140%
