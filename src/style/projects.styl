@import mixins

// TODO: inna refactor
.project
  display: flex
  flex-wrap: wrap
  margin-top: 1em

  @media screen and (min-width: 900px)
    margin: 4em 0

  .description, .images, .keywords
    flex: 1

  .description, .images
    flex-basis: 100%
    @media screen and (min-width: 800px)
      flex-basis: 50%

  .description
    flex-wrap: wrap
    padding: 1.2em 1.2em
    align-self: stretch

    p
      width: 100%
      align-self: start
    
    a
      flex-basis: 100%


  .keywords
    display: block
    align-self: flex-end
    margin: 0.8em -1.2em -1.2em -1.2em
    width: 100%
    flex-grow: 1
    background: #333
    color: #eee
    padding: 0.4em 0.7em
    border-top: 1px solid #7a7a7a

    li
      display: inline
      padding: .1em .3em
      background: blue

  img
    width: 100%
    height auto
    flex: 1 
    object-fit: cover
    
  &:nth-child(odd)
    background: linear-gradient(-45deg, #414345, #232526)

  &:nth-child(even)
    background: linear-gradient(45deg, #414345, #232526)

    .description
      @media screen and (min-width: 800px)
        order: 3

